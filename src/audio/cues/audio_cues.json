{
  "$schema": "https://example.local/godseed/audio-cues.schema.json",
  "version": 1,
  "cues": [
    {
      "id": "amb.drone.low",
      "type": "loop",
      "src": "drone_low.ogg",
      "gain": 0.18,
      "entropyMin": 0,
      "entropyMax": 45,
      "tags": ["ambient","soft","loop"],
      "duckOn": ["ui.choice.open"],
      "sidechainOn": ["sfx.pulse.heart"]
    },
    {
      "id": "amb.drone.mid",
      "type": "loop",
      "src": "drone_mid.ogg",
      "gain": 0.16,
      "entropyMin": 35,
      "entropyMax": 80,
      "crossfadeFrom": "amb.drone.low",
      "tags": ["ambient","loop"]
    },
    {
      "id": "amb.hiss.static",
      "type": "loop",
      "src": "hiss_static.ogg",
      "gain": 0.08,
      "entropyMin": 60,
      "entropyMax": 100,
      "tags": ["static","loop","mirror"]
    },
    {
      "id": "sfx.pulse.heart",
      "type": "one",
      "src": "pulse_heart.ogg",
      "gain": 0.22,
      "rateVar": [0.95, 1.08],
      "cooldownMs": 800,
      "tags": ["flesh","loud"]
    },
    {
      "id": "sfx.chime.glass",
      "type": "one",
      "src": "chime_glass.ogg",
      "gain": 0.2,
      "cooldownMs": 600,
      "tags": ["stone","soft"]
    },
    {
      "id": "sfx.bell.far",
      "type": "one",
      "src": "bell_far.ogg",
      "gain": 0.18,
      "cooldownMs": 1500,
      "tags": ["ash","soft","loop"]
    }
  ],
  "routes": [
    { "when": "entropy.enter.40", "play": ["amb.drone.mid"] },
    { "when": "entropy.enter.60", "play": ["amb.hiss.static"] },
    { "when": "entropy.exit.60", "stop": ["amb.hiss.static"] },
    { "when": "entropy.tick.fast", "play": ["sfx.pulse.heart"] },
    { "when": "ui.choice.open", "duck": 0.6, "forMs": 900 },
    { "when": "story.flags.seed", "play": ["sfx.chime.glass"] },
    { "when": "story.flags.awaken", "play": ["sfx.bell.far","sfx.pulse.heart"] },
    { "when": "corruption.tag.loud", "play": ["sfx.pulse.heart"] },
    { "when": "corruption.tag.soft", "play": ["sfx.chime.glass"] }
  ]
}
